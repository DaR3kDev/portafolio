---
import Layout from "~/layouts/Layout.astro"
import { getPageData } from "~/utils/getBlogPage"

const data = await getPageData(Astro.url, "page404")
---

<Layout>
  <main class="relative min-h-screen w-full flex flex-col items-center justify-center
         px-4">
    <h1
      class="text-[10rem] sm:text-[12rem] md:text-[14rem]
           font-extrabold tracking-tight
           text-gray-900 dark:text-white leading-none"
    >
      404
    </h1>

    <span
      class="absolute top-1/2 -translate-y-1/2 rotate-12
           px-3 py-1 rounded-md text-xs sm:text-sm font-medium
           bg-gray-900 text-white
           dark:bg-white dark:text-black shadow-lg"
    >
      {data.title}
    </span>

    <a
      href="/"
      class="group relative inline-flex mt-8
           text-sm font-medium
           text-gray-900 dark:text-white
           focus:outline-none focus:ring-2 focus:ring-gray-400 dark:focus:ring-gray-600"
    >
      <span
        class="absolute inset-0 rounded-xl
             translate-x-1 translate-y-1
             bg-gray-900 dark:bg-white
             transition-transform
             group-hover:translate-x-0 group-hover:translate-y-0"
      ></span>

      <span
        class="relative inline-flex items-center justify-center
             px-8 py-3 rounded-xl
             border border-gray-900 dark:border-white
             bg-white text-gray-900
             dark:bg-neutral-950 dark:text-white
             transition"
      >
        {data.description}
      </span>
    </a>
  </main>
</Layout>
