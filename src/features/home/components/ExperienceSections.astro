---
import { Briefcase } from "@lucide/astro"
import { getPageData } from "~/utils/getBlogPage"

const data = await getPageData(Astro.url, "experience")
---

<section id="experience" class="py-16 lg:py-32 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto text-center space-y-4">
    <h2
      class="text-3xl sm:text-4xl md:text-5xl font-bold tracking-tight text-gray-900 dark:text-white"
    >
      {data.title}
    </h2>
    <p class="text-lg leading-relaxed text-gray-600 dark:text-gray-300">
      {data.description}
    </p>
  </div>

  <div class="relative mt-16 flex flex-col items-center gap-12">
    <div
      class="hidden md:block absolute top-0 bottom-0 left-1/2 -translate-x-1/2 w-1 bg-gray-300 dark:bg-gray-700"
    >
    </div>

    <div class="flex flex-col w-full max-w-4xl space-y-12 relative z-10">
      {
        data.experience.map((item, index) => (
          <div
            class={`relative flex flex-col md:flex-row md:items-start ${
              index % 2 === 0 ? 'md:justify-start' : 'md:justify-end'
            }`}
          >
            <div class="hidden md:block absolute left-1/2 -translate-x-1/2 top-6 w-5 h-5 rounded-full bg-gray-900 dark:bg-white border-4 border-gray-200 dark:border-gray-800 animate-pulse" />

            <div
              class={`w-full md:w-[48%] border border-gray-200 dark:border-gray-800 shadow-md dark:shadow-lg hover:shadow-2xl transform transition-all duration-300 rounded-xl bg-white dark:bg-neutral-900 p-6 ${
                index % 2 === 0
                  ? '-rotate-1 md:mr-auto md:translate-x-0'
                  : 'rotate-1 md:ml-auto md:translate-x-0'
              }`}
            >
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                <div class="flex flex-col space-y-1.5 sm:flex-1">
                  <div class="flex items-center gap-3 text-xl font-semibold text-gray-900 dark:text-white">
                    <div class="w-10 h-10 rounded-lg bg-gray-100 dark:bg-gray-800 flex items-center justify-center transition-colors duration-300 hover:rotate-12 hover:bg-gray-200 dark:hover:bg-gray-700">
                      <Briefcase class="w-5 h-5 text-gray-900 dark:text-white" />
                    </div>
                    {item.title}
                  </div>
                  <p class="text-base font-medium text-gray-600 dark:text-gray-400">
                    {item.company}
                  </p>
                </div>
                <span class="mt-2 sm:mt-0 text-sm font-medium bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded-full shrink-0 whitespace-nowrap">
                  {item.date}
                </span>
              </div>

              <p class="mt-4 text-gray-700 dark:text-gray-300 leading-relaxed">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
