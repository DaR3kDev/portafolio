---
import { Image } from "astro:assets"
import { MapPin } from "@lucide/astro"
import Logo from "~/assets/image/me.webp"
import { getPageData } from "~/utils/getBlogPage"

const data = await getPageData(Astro.url, "aboutme")
---

<section id="about" class="py-16 lg:py-32 px-4 sm:px-6 lg:px-8">
  <!-- TÍTULO -->
  <div class="max-w-3xl mx-auto text-center space-y-4">
    <h2
      class="text-3xl sm:text-4xl md:text-5xl font-bold tracking-tight text-gray-900 dark:text-white"
    >
      {data.title}
    </h2>
  </div>

  <!-- CONTENIDO -->
  <div class="mt-16 grid gap-12 lg:grid-cols-2 items-center">
    <!-- COLUMNA IZQUIERDA -->
    <div class="space-y-10">
      <!-- TEXTOS -->
      <div class="space-y-6 text-gray-900 dark:text-white">
        <p class="text-lg leading-relaxed">
          {data.description1}
        </p>
        <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
          {data.description2}
        </p>
      </div>

      <!-- TARJETAS -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <!-- TARJETA UBICACIÓN -->
        <div
          class="flex items-center gap-4 p-5 rounded-2xl
                 bg-gray-100 dark:bg-neutral-900
                 border border-gray-200 dark:border-gray-800"
        >
          <div
            class="flex items-center justify-center w-12 h-12 rounded-xl
                   bg-gray-200 dark:bg-neutral-800"
          >
            <MapPin class="w-6 h-6 text-gray-700 dark:text-gray-300" />
          </div>

          <div>
            <h4 class="font-semibold text-gray-900 dark:text-white">{data.locationLabel}</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">{data.location}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- COLUMNA DERECHA -->
    <div class="flex justify-center lg:justify-end">
      <div
        class="relative w-64 h-64 sm:w-80 sm:h-80 lg:w-96 lg:h-96
               rounded-full overflow-hidden shadow-xl
               border border-gray-200 dark:border-gray-800
               hover:scale-105 transition"
      >
        <Image src={Logo} alt="Foto personal" class="w-full h-full object-cover rounded-full" />
      </div>
    </div>
  </div>
</section>
