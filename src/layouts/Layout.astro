---
import "~/styles/global.css"
import Backgraound from "~/components/backgraoud/Backgraound.astro"
import Footer from "~/components/footer/Footer.astro"
import Navbar from "~/components/navbar/Navbar.astro"
import { getLangFromUrl } from "~/i18n/ui"

const { title = "Portafolio", description = "Portafolio de Kevin" } = Astro.props
const lang = getLangFromUrl(Astro.url)
---

<!doctype html>
<html lang={lang} class="bg-white dark:bg-neutral-950 transition-colors">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body
    class="font-family-poppins relative min-h-screen flex flex-col text-gray-800 dark:text-gray-300 overflow-x-hidden"
  >
    <Backgraound />

    <header class="w-full fixed top-0 left-0 z-50">
      <Navbar />
    </header>

    <main
      class="flex-1 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 sm:pt-28 md:pt-32 pb-16 sm:pb-20 box-border"
    >
      <slot />
    </main>

    <Footer />
  </body>
</html>
