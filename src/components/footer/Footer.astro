---
import { Github, Linkedin, Mail, Phone } from '@lucide/astro'
import { getPageData } from '~/utils/getBlogPage'

const data = await getPageData(Astro.url, 'footer')
const iconsMap = { Github, Linkedin, Mail, Phone }
const dateYear = new Date().getFullYear()
---

<footer
  class="w-full dark:bg-neutral-950/60 backdrop-blur-md border-t border-black/10 dark:border-white/10
         text-gray-800 dark:text-gray-300 px-4 sm:px-6 lg:px-8 py-6 sm:py-8"
>
  <div
    class="mx-auto max-w-7xl flex flex-col sm:flex-row items-center justify-between gap-4 sm:gap-6"
  >
    <!-- Texto -->
    <span class="text-xs sm:text-sm md:text-base text-center sm:text-left">
      Â© {dateYear}
      <a href="#" class="font-medium hover:underline">{data.name}</a>. {data.rights}
    </span>

    <!-- Iconos -->
    <ul class="flex items-center gap-5 sm:gap-6">
      {
        data.links.map(item => {
          const Icon = iconsMap[item.icon as keyof typeof iconsMap]
          return (
            <li>
              <a
                href={item.href}
                aria-label={item.name}
                class="flex items-center justify-center w-9 h-9 sm:w-10 sm:h-10
                     rounded-full text-gray-700 dark:text-gray-300
                     hover:text-black dark:hover:text-white
                     hover:bg-black/5 dark:hover:bg-white/10 transition-all"
              >
                <Icon class="w-5 h-5" />
              </a>
            </li>
          )
        })
      }
    </ul>
  </div>
</footer>
